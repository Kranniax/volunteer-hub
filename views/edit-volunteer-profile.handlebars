<form data-volunteer-id="{{volunteer.id}}" method="POST" class="edit-volunteer-form">
    <h2>Edit Volunteer Profile</h2>
    <div>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="{{volunteer.firstName}}" required>
    </div>
    <div>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="{{volunteer.lastName}}" required>
    </div>
    <div>
        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="phone" value="{{volunteer.phone}}">
    </div>
    <div>
        <label for="dateOfBirth">Date of Birth:</label>
        <input type="date" id="dateOfBirth" name="dateOfBirth" value="{{volunteer.dateOfBirth}}" required>
    </div>
    <div>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="{{volunteer.address}}" required>
    </div>
    <div>
        <label for="emergencyContactName">Emergency Contact Name:</label>
        <input type="text" id="emergencyContactName" name="emergencyContactName" value="{{volunteer.emergencyContact.name}}">
    </div>
    <div>
        <label for="emergencyContactPhone">Emergency Contact Phone:</label>
        <input type="text" id="emergencyContactPhone" name="emergencyContactPhone" value="{{volunteer.emergencyContact.phone}}">
    </div>
    <div>
        <label for="emergencyContactRelationship">Emergency Contact Relationship:</label>
        <input type="text" id="emergencyContactRelationship" name="emergencyContactRelationship" value="{{volunteer.emergencyContact.relationship}}">
    </div>
    <div>
        <label for="bio">Short Bio:</label>
        <textarea id="bio" name="bio">{{volunteer.bio}}</textarea>
    </div>
    <div>
        <label for="profileImage">Profile Image URL:</label>
        <input type="url" id="profileImage" name="profileImage" value="{{volunteer.profileImage}}">
    </div>
    <button type="submit">Save Changes</button>
</form>
<script src="/js/edit-volunteer-profile.js"></script>