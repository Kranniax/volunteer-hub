<form id="edit-opportunity-form" data-opportunity-id="{{opportunity.id}}" method="POST">
  <h2>Edit Opportunity</h2>
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="{{opportunity.title}}" required>
  </div>
  <div>
    <label for="description">Description</label>
    <textarea id="description" name="description" required>{{opportunity.description}}</textarea>
  </div>
  <div>
    <label for="requirements">Requirements</label>
    <textarea id="requirements" name="requirements" required>{{opportunity.requirements}}</textarea>
  </div>
  <div>
    <label for="date">Date</label>
    <input type="date" id="date" name="date" value="{{opportunity.date}}" required>
  </div>
  <div>
    <label for="location">Location</label>
    <input type="text" id="location" name="location" value="{{opportunity.location}}" required>
  </div>
  <div>
    <label for="startTime">Start Time</label>
    <input type="time" id="startTime" name="startTime" value="{{opportunity.startTime}}" required>
  </div>
  <div>
    <label for="endTime">End Time</label>
    <input type="time" id="endTime" name="endTime" value="{{opportunity.endTime}}" required>
  </div>
  <div>
    <label for="spotsAvailable">Spots Available</label>
    <input type="number" id="spotsAvailable" name="spotsAvailable" value="{{opportunity.spotsAvailable}}" min="0" required>
  </div>
  <div>
    <label for="spotsFilledCount">Spots Filled</label>
    <input type="number" id="spotsFilledCount" name="spotsFilledCount" value="{{opportunity.spotsFilledCount}}" min="0" required>
  </div>
  <div>
    <label for="status">Status</label>
    <select id="status" name="status" required>
      <option value="open" >Open</option>
      <option value="closed" >Closed</option>
    </select>
  </div>
  <button type="submit">Save Changes</button>
</form>
<script src="/js/edit-opportunity.js"></script>
